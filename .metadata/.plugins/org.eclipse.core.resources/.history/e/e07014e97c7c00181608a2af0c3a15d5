package com.qa.MongoDB;

import java.util.Arrays;
import java.util.List;

import com.mongodb.BasicDBObject;
import com.mongodb.DB;
import com.mongodb.DBCollection;
import com.mongodb.DBObject;
import com.mongodb.MongoClient;

public class Runner {

	public static void main(String[] args) {

		// MongoClient mongoClient = new MongoClient(new
		// MongoClientURI("mongodb://localhost:27017"));

		MongoClient mongoClient = new MongoClient();

		DB database = mongoClient.getDB("test");

		DBCollection collection = database.getCollection("Person");

		List<Integer> books = Arrays.asList(27464, 747854);
		DBObject person = new BasicDBObject("_id", "jo").append("name", "Jo Bloggs")
				.append("address", new BasicDBObject("street", "123 Fake St").append("city", "Faketon")
						.append("state", "MA").append("zip", 12345))
				.append("books", books);

		collection.insert(person);

		mongoClient.close();

	}

}
